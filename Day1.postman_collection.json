						"exec": [
							"var jsonData=pm.response.json();\r",
							"pm.collectionVariables.set(\"id\",jsonData.id);\r",
							"\r",
							"pm.test(\"checking status code\",function()\r",
							"{\r",
							"    pm.expect(pm.response.status).to.equal(201)\r",
							"})\r",
							"pm.test(\"checking data type for name\",function()\r",
							"{\r",
							"    pm.expect(jsonData.name).to.be.a(String)\r",
							"})\r",
							"pm.test(\"checking data type of job\",function()\r",
							"{\r",
							"    pm.expect(jsonData.job).to.be.a(String)\r",
							"})\r",
							"pm.test(\"checking the value of name\",function()\r",
							"{\r",
							"    pm.expect(jsonData.name).to.equal(\"Anjali\")\r",
							"})\r",
							"\r",
